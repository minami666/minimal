.header
  .header__box
    .header__box__1
      = link_to "MINIMA",root_path
    .header__box__2
      .header__box__2__input-group
        %input.search-input{class: "search",name: "q", placeholder: "検索", type: "text", value: params[:q], style: "width: 200px; height:30px;"}
        %button.btn.btn-info{alt: "検索", value: "検索", type: "button"}
    .header__box__3
      - if user_signed_in?
        .header__box__3--mypage
          = link_to "マイページ",user_path(current_user)
        .header__box__3--logout
          = link_to "ログアウト",destroy_user_session_path, method: :delete
      - else
        .header__box__3--registration
          = link_to "新規登録",new_user_registration_path
        .header__box__3--login
          = link_to "ログイン",new_user_session_path